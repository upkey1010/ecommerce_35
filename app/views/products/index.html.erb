<section>
  <div class="container">
    <div class="row">
        <div class="col-sm-3">
          <div class="left-sidebar">
            <h2><%= t ".search" %></h2>
            <form class="navbar-form" action="/products" method="get">
                <div class="input-group">
                  <input type="text" class="form-control src" name="search" placeholder="Search">
                  <div class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                      <i class="glyphicon glyphicon-search"></i>
                    </button>
                  </div>
                </div>
              </form>
            <h2><%= t ".category" %></h2>
            <div class="panel-group category-products" id="accordian"><!--category-productsr-->
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordian" href="#sportswear">
                      <%= t ".iphone" %>
                    </a>
                  </h4>
                </div>
                <div id="sportswear" class="panel-collapse collapse">
                  <div class="panel-body">
                    <ul>
                      <li><a href="."><%= t ".ip5" %></a></li>
                      <li><a href="."><%= t ".ip5s" %></a></li>
                      <li><a href="."><%= t ".ip6" %></a></li>
                      <li><a href="."><%= t ".ip6s" %></a></li>
                      <li><a href="."><%= t ".ip7" %></a></li>
                    </ul>
                  </div>
                </div>
              </div>
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordian" href="#mens">
                      <%= t".ipad"%>
                    </a>
                  </h4>
                </div>
                <div id="mens" class="panel-collapse collapse">
                  <div class="panel-body">
                    <ul>
                      <li><a href="."><%= t".ipad-pro" %></a></li>
                      <li><a href="."><%= t".ipad2" %></a></li>
                      <li><a href="."><%= t".ipad3" %></a></li>
                      <li><a href="."><%= t".ipad4" %></a></li>
                    </ul>
                  </div>
                </div>
              </div>

              <div class="panel panel-default">
                <div class="panel-heading">
                  <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordian" href="#womens">
                      <a href="/products/watch"><%= t".watch" %></a>
                    </a>
                  </h4>
                </div>
              </div>
            </div><!--/category-products-->
            <div class="price-range"><!--price-range-->
              <h2><%= t ".range" %></h2>
              <div class="well">
                <%= form_tag(products_path, method: :get) do %>
                  <%= collection_radio_buttons :reson, :price, Settings.controllers.price.map {|k,v| [v, t("#{k}")]},
                   :first, :last, { checked: Settings.controllers.products[:all] } do |b| %>
                    <div class="form-check">
                      <%= b.radio_button(class: "form-check-label") %>
                      <%= b.label(class: "form-check-label") %>
                    </div>
                  <% end %>
                  <%= submit_tag( t(".search"), class: "btn btn-primary") %>
                <% end %>
              </div>
            </div><!--/price-range-->
          </div>
        </div>
        <div class="col-sm-9 padding-right">
          <div class="features_items"><!--features_items-->
            <h2 class="title text-center"><%= t ".product" %></h2>
            <%= render @products %>
          </div><!--features_items-->
        </div>
      </div>
  </div>
</section>

