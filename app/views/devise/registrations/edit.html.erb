<% provide(:title, t("update_profile")) %>
<% provide(:button_text, t(".create_account")) %>

<h1><%= t "update_profile" %></h1>

<div class="row col-md-2 col-md-offset-3 user_avatar" align="center">
  <%= show_avatar_for @user %>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <%= f.label :picture %>
      <%= f.file_field :picture, accept: Settings.picture.accepted_file %>

      <% if user_signed_in? && current_user.admin? && !current_user?(@user) %>
        <%= f.label :admin %>
        <%= f.check_box :admin %>
      <% end %><br>

      <%= f.label :name %><br />
      <%= f.text_field :name, class: "form-control" %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
      </div>

      <%= f.label :address %><br />
      <%= f.text_field :address, class: "form-control" %>

      <%= f.label :phone %><br />
      <%= f.text_field :phone, class: "form-control" %>

      <div class="actions">
        <%= f.submit t("update"), class: "btn btn-primary" %>
      </div>
    <% end %>

    <h3>Cancel my account</h3>

    <p>Unhappy? <%= button_to t(".cancle_account"), registration_path(resource_name), data: { confirm: t("confirm_msg") }, method: :delete %></p>

    <%= link_to t("back"), :back %>
  </div>
</div>
